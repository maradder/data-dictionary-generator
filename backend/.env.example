# Application Settings
APP_NAME="Data Dictionary Generator"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=true
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration
HOST="0.0.0.0"
PORT=8000
RELOAD=true  # Auto-reload on code changes (development only)

# Database Configuration
DATABASE_URL="postgresql://ddgen_user:ddgen_password@localhost:5432/data_dictionary_db"
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_ECHO=false  # Set to true to log SQL queries

# Redis Configuration (for caching and job queues - Phase 2)
REDIS_URL="redis://localhost:6380/0"
REDIS_CACHE_TTL=3600  # Cache TTL in seconds

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
API_KEY_ENABLED=false  # Enable API key authentication
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"  # CORS origins

# OpenAI Configuration
OPENAI_API_KEY="sk-your-openai-api-key-here"
OPENAI_MODEL="gpt-4"  # gpt-4, gpt-3.5-turbo
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
OPENAI_ENABLED=true  # Enable/disable AI description generation

# File Processing
MAX_FILE_SIZE_MB=500  # Maximum JSON file size in MB
MAX_RECORDS_TO_ANALYZE=10000  # Limit for initial analysis
SAMPLE_SIZE=100  # Number of sample values to collect per field
STREAMING_CHUNK_SIZE=65536  # Chunk size for streaming JSON parsing

# Export Settings
EXCEL_MAX_ROWS=1048576  # Excel row limit
EXPORT_TEMP_DIR="/tmp/data-dict-exports"

# Rate Limiting (Phase 2)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_PER_MINUTE=60

# Monitoring (Phase 2)
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"
METRICS_ENABLED=false

# Email Notifications (Phase 2)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM_EMAIL="noreply@datadictgen.com"

# Background Jobs (Phase 2)
CELERY_BROKER_URL="redis://localhost:6380/1"
CELERY_RESULT_BACKEND="redis://localhost:6380/2"
